<Window x:Class="EventDressApp.MVVM.View.Dialogos.DialogoConfirmacionEliminar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmar Eliminación"
        Height="200" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Escribe 'Eliminar' para confirmar:" Margin="10" />
            <TextBox x:Name="ConfirmarEliminarTB" Width="200" Margin="10" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Cancelar" Width="80" Click="Cancelar_Click" Margin="5" />
                <Button Content="Confirmar" Width="80" Click="Confirmar_Click" Margin="5" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
