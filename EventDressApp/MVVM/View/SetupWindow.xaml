<Window x:Class="EventDressApp.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Setup Empresa" Height="400" Width="600">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Nombre Empresa"/>
            <TextBox x:Name="NombreEmpresaTextBox"/>

            <Label Content="Logo Empresa"/>
            <TextBox x:Name="LogoEmpresaTextBox"/>
            <Button Content="Seleccionar Logo" Click="SeleccionarLogo_Click"/>
            
            <Label Content="Dirección Empresa"/>
            <TextBox x:Name="DireccionEmpresaTextBox"/>

            <Label Content="Teléfono Empresa"/>
            <TextBox x:Name="TelefonoEmpresaTextBox"/>

            <Label Content="Email Empresa"/>
            <TextBox x:Name="EmailEmpresaTextBox"/>

            <Label Content="Sitio Web Empresa"/>
            <TextBox x:Name="SitioWebEmpresaTextBox"/>

            <Button Content="Guardar" Click="Guardar_Click"/>
        </StackPanel>
    </Grid>
</Window>