<UserControl x:Class="EventDressApp.MVVM.View.InventarioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EventDressApp.MVVM.View"
             xmlns:viewModel="clr-namespace:EventDressApp.MVVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModel:InventarioViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filtros -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <ComboBox Width="150" Margin="530,-20,0,0">
                <ComboBoxItem>Todos</ComboBoxItem>
                <ComboBoxItem>Formal</ComboBoxItem>
                <ComboBoxItem>Casual</ComboBoxItem>
            </ComboBox>
        </StackPanel>

        <!-- Lista de Trajes -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding modelo}" SelectedItem="{Binding modeloSeleccionado}"
                  AutoGenerateColumns="False" IsReadOnly="True" Margin="10">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding TrajeId}" Width="Auto"/>
                <DataGridTextColumn Header="Categoría" Binding="{Binding CategoriaId}" Width="*"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding NombreTraje}" Width="*"/>
                <DataGridTextColumn Header="Descripción" Binding="{Binding DescripcionTraje}" Width="*"/>
                <DataGridTextColumn Header="Genero" Binding="{Binding GeneroTraje}" Width="*"/>
                <DataGridTextColumn Header="Talla" Binding="{Binding TallaTraje}" Width="*"/>
                <DataGridTextColumn Header="Color" Binding="{Binding ColorTraje}" Width="*"/>
                <DataGridTextColumn Header="Precio Diario" Binding="{Binding PrecioDiarioTraje}" Width="*"/>
                <DataGridTextColumn Header="Estado" Binding="{Binding EstadoTraje}" Width="*"/>
                <DataGridTextColumn Header="Imagen" Binding="{Binding RutaImagenTraje}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botones de Acción -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button x:Name="add_suit" Content="Agregar" 
                    Command="{Binding AgregarmodeloCommand}"
                    Margin="0,0,10,0"/>
            <Button Content="Editar" 
                    Command="{Binding EditarmodeloCommand}"
                    IsEnabled="{Binding modeloSeleccionado, Converter={StaticResource NullToBooleanConverter}}"/>
            <Button Content="Eliminar" 
                    Command="{Binding EliminarmodeloCommand}"
                    Margin="10,0,0,0"
                    IsEnabled="{Binding modeloSeleccionado, Converter={StaticResource NullToBooleanConverter}}"/>
        </StackPanel>
    </Grid>
</UserControl>